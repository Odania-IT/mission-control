<div data-ng-controller="ServersController">
	<h1>Listing Servers</h1>

	<table class="table table-striped">
		<thead>
		<tr>
			<th>Name</th>
			<th>Hostname</th>
			<th>Ip</th>
			<th>Memory</th>
			<th>Cpu</th>
			<th>Active</th>
			<th colspan="3"></th>
		</tr>
		</thead>

		<tbody>
		<tr data-ng-repeat="server in servers">
			<td>{{ server.name }}</td>
			<td>{{ server.hostname }}</td>
			<td>{{ server.ip }}</td>
			<td>{{ server.memory }}</td>
			<td>{{ server.cpu }}</td>
			<td>{{ server.active }}</td>
			<td><a data-ng-href="/protected/servers/{{ server.id }}">Show</a></td>
			<td><a data-ng-href="/protected/servers/{{ server.id }}/edit">Edit</a></td>
			<td>
				<a data-ng-confirm-click="destroyServer(server)" data-ng-confirm-message="Do you really want to delete the server?">Delete</a>
			</td>
		</tr>
		</tbody>
	</table>

	<br>
	<a data-ng-href="/protected/servers/new">New Server</a>
</div>