<div data-ng-controller="ApplicationsController">
	<h1>Listing Applications</h1>

	<table class="table table-striped">
		<thead>
		<tr>
			<th>Name</th>
			<th>Domains</th>
			<th>Ports</th>
			<th>Images</th>
			<th colspan="3"></th>
		</tr>
		</thead>

		<tbody>
		<tr data-ng-repeat="application in applications">
			<td>{{ application.name }}</td>
			<td>{{ application.domains.join(', ') }}</td>
			<td>{{ application.ports.join(', ') }}</td>
			<td>{{ getImages(application) }}</td>
			<td><a data-ng-href="/protected/applications/{{ application.id }}" target="_self">Show</a></td>
			<td><a data-ng-href="/protected/applications/{{ application.id }}/edit" target="_self">Edit</a></td>
			<td>
				<a data-ng-confirm-click="destroyApplication(application)" data-ng-confirm-message="Do you really want to delete the application?">Delete</a>
			</td>
		</tr>
		</tbody>
	</table>

	<br>
	<a data-ng-href="/protected/applications/new" target="_self">New Application</a>
</div>
