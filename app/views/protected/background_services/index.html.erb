<div data-ng-controller="BackupController">
	<p>

	<h1>Listing Background Schedules</h1>

	<table class="table table-striped">
		<thead>
		<tr>
			<th>Name</th>
			<th>Type</th>
			<th>Strategy</th>
			<th>Times</th>
			<th colspan="3"></th>
		</tr>
		</thead>

		<tbody>
		<tr data-ng-repeat="backgroundSchedule in backgroundSchedules">
			<td>{{ backgroundSchedule.name }}</td>
			<td>{{ backgroundSchedule.cron_type }}</td>
			<td>{{ backgroundSchedule.strategy }}</td>
			<td>{{ backgroundSchedule.cron_times }}</td>
			<td><a data-ng-href="/protected/background_schedules/{{ backgroundSchedule.id }}">Show</a></td>
			<td><a data-ng-href="/protected/background_schedules/{{ backgroundSchedule.id }}/edit">Edit</a></td>
			<td>
				<a data-ng-confirm-click="destroyBackgroundSchedule(backgroundSchedule)" data-ng-confirm-message="Do you really want to delete the backup schedule?">Delete</a>
			</td>
		</tr>
		</tbody>
	</table>

	<br>
	<a data-ng-href="/protected/background_schedules/new">New Background Schedule</a>
	</p>

	<p>

	<h1>Listing Backup Servers</h1>

	<table class="table table-striped">
		<thead>
		<tr>
			<th>Name</th>
			<th>Url</th>
			<th>User</th>
			<th colspan="3"></th>
		</tr>
		</thead>

		<tbody>
		<tr data-ng-repeat="backupServer in backupServers">
			<td>{{ backupServer.name }}</td>
			<td>{{ backupServer.url }}</td>
			<td>{{ backupServer.user }}</td>
			<td><a data-ng-href="/protected/backup_servers/{{ backupServer.id }}">Show</a></td>
			<td><a data-ng-href="/protected/backup_servers/{{ backupServer.id }}/edit">Edit</a></td>
			<td>
				<a data-ng-confirm-click="destroyBackupServer(backupServer)" data-ng-confirm-message="Do you really want to delete the backup server?">Delete</a>
			</td>
		</tr>
		</tbody>
	</table>

	<br>
	<a data-ng-href="/protected/backup_servers/new">New BackupServer</a>
	</p>
</div>
