<div data-ng-controller="RepositoriesController">
	<h1>Listing Repositories</h1>

	<table class="table table-striped">
		<thead>
		<tr>
			<th>Name</th>
			<th>Url</th>
			<th>User</th>
			<th colspan="3"></th>
		</tr>
		</thead>

		<tbody>
		<tr data-ng-repeat="repository in repositories">
			<td>{{ repository.name }}</td>
			<td>{{ repository.url }}</td>
			<td>{{ repository.user }}</td>
			<td><a data-ng-href="#/repositories/{{ repository.id }}" target="_self">Show</a></td>
			<td><a data-ng-href="#/repositories/{{ repository.id }}/edit" target="_self">Edit</a></td>
			<td>
				<a data-ng-confirm-click="destroyRepository(repository)" data-ng-confirm-message="Do you really want to delete the repository?">Delete</a>
			</td>
		</tr>
		</tbody>
	</table>

	<br>
	<a data-ng-href="#/repositories/new" target="_self">New Repository</a>
</div>
