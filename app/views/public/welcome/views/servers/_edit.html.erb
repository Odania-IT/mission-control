<h1>Editing Protected Server</h1>

<form class="form-horizontal">
	<div class="form-group">
		<label for="inputName" class="col-sm-2 control-label">Name</label>
		<div class="col-sm-10">
			<input type="text" id="inputName" name="name" data-ng-model="server.name" />
		</div>
		<div class="has-error" data-ng-if="errors.name">{{ errors.name.join(', ') }}</div>
	</div>
	<div class="form-group">
		<label for="inputHostname" class="col-sm-2 control-label">Hostname</label>
		<div class="col-sm-10">
			<input type="text" id="inputHostname" name="hostname" data-ng-model="server.hostname" />
		</div>
		<div class="has-error" data-ng-if="errors.hostname">{{ errors.hostname.join(', ') }}</div>
	</div>
	<div class="form-group">
		<label for="inputIp" class="col-sm-2 control-label">Ip</label>
		<div class="col-sm-10">
			<input type="text" id="inputIp" name="ip" data-ng-model="server.ip" />
		</div>
		<div class="has-error" data-ng-if="errors.ip">{{ errors.ip.join(', ') }}</div>
	</div>
	<div class="form-group">
		<label for="inputMemory" class="col-sm-2 control-label">Memory</label>
		<div class="col-sm-10">
			<input type="text" id="inputMemory" name="memory" data-ng-model="server.memory" />
		</div>
		<div class="has-error" data-ng-if="errors.memory">{{ errors.memory.join(', ') }}</div>
	</div>
	<div class="form-group">
		<label for="inputCpu" class="col-sm-2 control-label">Cpu</label>
		<div class="col-sm-10">
			<input type="text" id="inputCpu" name="cpu" data-ng-model="server.cpu" />
		</div>
		<div class="has-error" data-ng-if="errors.cpu">{{ errors.cpu.join(', ') }}</div>
	</div>
	<div class="form-group">
		<label for="inputBasicAuth" class="col-sm-2 control-label">Basic Auth</label>
		<div class="col-sm-10">
			<input type="text" id="inputBasicAuth" name="name" data-ng-model="server.basic_auth" />
		</div>
		<div class="has-error" data-ng-if="errors.basic_auth">{{ errors.basic_auth.join(', ') }}</div>
	</div>
	<div class="form-group">
		<label for="inputVolumesPath" class="col-sm-2 control-label">Volumes Path</label>
		<div class="col-sm-10">
			<input type="text" id="inputVolumesPath" name="name" data-ng-model="server.volumes_path" />
		</div>
		<div class="has-error" data-ng-if="errors.volumes_path">{{ errors.volumes_path.join(', ') }}</div>
	</div>
	<div class="form-group">
		<label for="inputBackupPath" class="col-sm-2 control-label">Backup Path</label>
		<div class="col-sm-10">
			<input type="text" id="inputBackupPath" name="backup_path" data-ng-model="server.backup_path" />
		</div>
		<div class="has-error" data-ng-if="errors.backup_path">{{ errors.backup_path.join(', ') }}</div>
	</div>
	<div class="form-group">
		<label for="inputProxyType" class="col-sm-2 control-label">Proxy Type</label>
		<div class="col-sm-10">
			<select id="inputProxyType" data-ng-model="image.proxy_type" data-ng-options="val for val in bootstrapData.proxy_types"></select>
		</div>
		<div class="has-error" data-ng-if="errors.proxy_type">{{ errors.proxy_type.join(', ') }}</div>
	</div>
	<div class="form-group">
		<label for="inputActive" class="col-sm-2 control-label">Active</label>
		<div class="col-sm-10">
			<input type="checkbox" value="" data-ng-model="server.active">
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button data-ng-click="saveServer()" class="btn btn-default">Save</button>
		</div>
	</div>
</form>

<a data-ng-href="#/servers">Back</a>
