<h1>Listing Backup Servers</h1>

<table class="table table-striped">
	<thead>
	<tr>
		<th>Name</th>
		<th>Url</th>
		<th>User</th>
		<th colspan="3"></th>
	</tr>
	</thead>

	<tbody>
		<tr data-ng-repeat="backupServer in backupServers">
			<td>{{ backupServer.name }}</td>
			<td>{{ backupServer.url }}</td>
			<td>{{ backupServer.user }}</td>
			<td><a data-ng-href="#/backup_servers/{{ backupServer.id }}">Show</a></td>
			<td><a data-ng-href="#/backup_servers/{{ backupServer.id }}/edit">Edit</a></td>
			<td>
				<a data-ng-confirm-click="destroyBackupServer(backupServer)" data-ng-confirm-message="Do you really want to delete the backup_server?">Delete</a>
			</td>
		</tr>
	</tbody>
</table>

<br>
<a data-ng-href="#/backup_servers/new">New BackupServer</a>
