<h1>Listing Templates</h1>

<table class="table table-striped">
	<thead>
	<tr>
		<th>Name</th>
		<th>Images</th>
		<th>Ports</th>
		<th>Volumes</th>
		<th>Environment</th>
		<th>Scalable</th>
		<th colspan="3"></th>
	</tr>
	</thead>

	<tbody>
	<tr data-ng-repeat="template in templates">
		<td>{{ template.name }}</td>
		<td>{{ template.images.join(', ') }}</td>
		<td>{{ template.ports.join(', ') }}</td>
		<td>{{ template.volumes.join(', ') }}</td>
		<td>{{ template.environment.join(', ') }}</td>
		<td>{{ template.scalable }}</td>
		<td><a data-ng-href="#/templates/{{ template.id }}">Show</a></td>
		<td><a data-ng-href="#/templates/{{ template.id }}/edit">Edit</a></td>
		<td>
			<a data-ng-confirm-click="destroyTemplate(template)" data-ng-confirm-message="Do you really want to delete the template?">Delete</a>
		</td>
	</tr>
	</tbody>
</table>

<br>
<a data-ng-href="#/templates/new">New Template</a>
